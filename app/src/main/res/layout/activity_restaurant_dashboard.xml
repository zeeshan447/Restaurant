<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestaurantDashboard"
    android:background="@drawable/dashboard"

    >
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:rowCount="4"
        android:columnCount="2"
        android:layout_margin="20dp"
        android:layout_centerInParent="true"
        >

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="9dp"
        app:cardCornerRadius="8dp"
        android:elevation="8dp"


        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center_vertical|center_horizontal"
            >
            <ImageView
                android:id="@+id/rdashboardmenu"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_menu"
                >

            </ImageView>
            <TextView
                android:id="@+id/rdashboardtextmenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Menu"
                android:textSize="20sp"
                android:textAlignment="center"
                />



        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="9dp"
        app:cardCornerRadius="8dp"
        android:elevation="8dp"


        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center_vertical|center_horizontal"
            >
            <ImageView
                android:id="@+id/rdashboardmanagedine"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_chair_dinein"
                >

            </ImageView>
            <TextView
                android:id="@+id/rdashboardtextmanagedine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage Dine In"
                android:textSize="20sp"
                android:textAlignment="center"


                />



        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="9dp"
        app:cardCornerRadius="8dp"
        android:elevation="8dp"


        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center_vertical|center_horizontal"
            >
            <ImageView
                android:id="@+id/rdashboarddelivery"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_resource_package"
                >

            </ImageView>
            <TextView
                android:id="@+id/rdashboardtextdelivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage Delivery"
                android:textSize="20sp"
                android:textAlignment="center"


                />



        </LinearLayout>
    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="9dp"
            app:cardCornerRadius="8dp"
            android:elevation="8dp"


            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_vertical|center_horizontal"
                >
                <ImageView
                    android:id="@+id/rdashboarduploadimg"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_image_upload"
                    >

                </ImageView>
                <TextView
                    android:id="@+id/rdashboardtextuploadimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Image"
                    android:textSize="20sp"
                    android:textAlignment="center"


                    />



            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>

</RelativeLayout>