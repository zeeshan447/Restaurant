<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#EFEEEF"
    >

    <TextView
        android:id="@+id/txt_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lets dive into whole new experience of \n ordering food"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/btn_dineIn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/ic_camera"
        android:text="Dine In"
        android:gravity="center|bottom"
        android:textSize="15sp"
        android:layout_gravity="center"


        />
    <Button
        android:id="@+id/btn_signIn"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/btn_dineIn"
        android:layout_alignParentRight="true"
        android:layout_marginTop="200dp"
        android:background="@drawable/ic_sign_in"

        />

    <TextView
        android:id="@+id/txt_signIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="78dp"
        android:text="Sign In"
        android:layout_below="@id/btn_signIn"

        />

    <Button
        android:id="@+id/btn_signUp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/btn_dineIn"
        android:layout_marginTop="200dp"
        android:background="@drawable/ic_signup"
        />
    <TextView
        android:id="@+id/txt_signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_signUp"
        android:layout_marginLeft="78dp"
        android:text="Sign Up"
        />


</RelativeLayout>