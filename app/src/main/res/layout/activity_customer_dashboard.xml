<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerDashboard"
    android:background="@drawable/dashboard"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<GridLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="4"
    android:columnCount="2"
    android:layout_margin="20dp"
    >

<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_row="0"
    android:layout_column="1"
    android:layout_gravity="fill"
    android:layout_rowWeight="1"
    android:layout_columnWeight="1"
    android:layout_margin="9dp"
    app:cardCornerRadius="8dp"
    android:elevation="8dp"


    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center_vertical|center_horizontal"
        >
        <ImageView
            android:id="@+id/cdashboarddelivery"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_delivery_man"
            >

        </ImageView>
        <TextView
            android:id="@+id/cdashboardtextdelivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery"
            android:textSize="20sp"
            android:textAlignment="center"
            />



    </LinearLayout>
</androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="9dp"
        app:cardCornerRadius="8dp"
        android:elevation="8dp"


        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center_vertical|center_horizontal"
            >
            <ImageView
                android:id="@+id/cdashboardreserve"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_table"
                >

            </ImageView>
            <TextView
                android:id="@+id/cdashboardtextreserve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reservation"
                android:textSize="20sp"
                android:textAlignment="center"


                />



        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="9dp"
        app:cardCornerRadius="8dp"
        android:elevation="8dp"


        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center_vertical|center_horizontal"
            >
            <ImageView
                android:id="@+id/cdashboardrestaurants"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_placeholder"
                >

            </ImageView>
            <TextView
                android:id="@+id/cdashboardtextrestaurants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurants"
                android:textSize="20sp"
                android:textAlignment="center"
                />



        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="9dp"
        app:cardCornerRadius="8dp"
        android:elevation="8dp"


        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center_vertical|center_horizontal"
            >
            <ImageView
                android:id="@+id/cdashboardmyorder"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_hamburger"
                >

            </ImageView>
            <TextView
                android:id="@+id/cdashboardtextmyorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Orders"
                android:textSize="20sp"
                android:textAlignment="center"
                />



        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="9dp"
        app:cardCornerRadius="8dp"
        android:elevation="8dp"


        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center_vertical|center_horizontal"
            >
            <ImageView
                android:id="@+id/cdashboardwallet"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_paypal"
                >

            </ImageView>
            <TextView
                android:id="@+id/cdashboardtextwallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wallet"
                android:textSize="20sp"
                android:textAlignment="center"


                />



        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="9dp"
        app:cardCornerRadius="8dp"
        android:elevation="8dp"


        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center_vertical|center_horizontal"
            >
            <ImageView
                android:id="@+id/cdashboardcoupons"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_coupon"
                >

            </ImageView>
            <TextView
                android:id="@+id/cdashboardtextcoupons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="coupons"
                android:textSize="20sp"
                android:textAlignment="center"
                />



        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="9dp"
        app:cardCornerRadius="8dp"
        android:elevation="8dp"


        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center_vertical|center_horizontal"
            >
            <ImageView
                android:id="@+id/cdashboardfeedback"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_comment"
                >

            </ImageView>
            <TextView
                android:id="@+id/cdashboardtextfeedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feedback"
                android:textSize="20sp"
                android:textAlignment="center"


                />



        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="9dp"
        app:cardCornerRadius="8dp"
        android:elevation="8dp"


        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center_vertical|center_horizontal"
            >
            <ImageView
                android:id="@+id/cdashboardprevorder"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_choices"
                >

            </ImageView>
            <TextView
                android:id="@+id/cdashboardtextprevorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Previous Orders"
                android:textSize="20sp"
                android:textAlignment="center"
                />



        </LinearLayout>
    </androidx.cardview.widget.CardView>

</GridLayout>
    </ScrollView>
</RelativeLayout>