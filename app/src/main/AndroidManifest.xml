<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.restaurant">

    <application tools:replace="android:theme"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Restaurant">
        <activity android:name=".CustomerMenu"></activity>
        <activity android:name=".RestaurantDelivery" />
        <activity android:name=".RestaurantReservation" />
        <activity android:name=".RestaurantImageUpload" />
        <activity android:name=".CustomerProfile" />
        <activity android:name=".RestaurantListings" />
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity" />
        <activity android:name=".RestaurantMenu" />
        <activity android:name=".RestaurantDashboard" />
        <activity android:name=".ForgotPassword" />
        <activity
            android:name=".SignIn"
            android:noHistory="true" />
        <activity android:name=".CustomerDashboard" />
        <activity android:name=".VerifyPhone" />
        <activity
            android:name=".SignUp"
            android:label="@string/title_activity_sign_up"
            android:theme="@style/Theme.Restaurant.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>